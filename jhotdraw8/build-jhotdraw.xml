            </classpath>
            <compilerarg value="-version"/>
        </javac>
        <copy todir="${build.main.classes}">
            <fileset dir="${src.main.java}">
                <exclude name="**/.*"/>
                <include name="**/*.properties"/>
                <include name="**/*.png"/>
                <include name="**/*.fxml"/>
