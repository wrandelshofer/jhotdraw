                 footer="&lt;font size=-2&gt;${copyright}&lt;/font&gt;"
                 header="${ant.project.name} ${version}" 
                 windowtitle="${ant.project.name} ${version}"
                 maxmemory="256M"
                 overview="${src.main.java}/org/jhotdraw8/overview.html"
                 charset="UTF-8"
