    <target name="do-compile.jsr305" depends="init">
        <mkdir dir="${build.jsr305.classes}"/>
        <javac executable="${jdk}/bin/javac" fork="yes"
               source="${jdk.version}" target="${jdk.version}"
               encoding="UTF-8" destdir="${build.jsr305.classes}"
               debug="true"
               verbose="false"
        >
            <compilerarg value="-Xlint"/>
            <src path="${src.jsr305.java}"/>
            <modulepath>
                <fileset dir="${lib.compile}/modulepath" includes="**/*.jar" />
            </modulepath>
            <classpath>
                <fileset dir="${lib.compile}/classpath" includes="**/*.jar" />
            </classpath>
            <compilerarg value="-version"/>
        </javac>
        <copy todir="${build.jsr305.classes}">
            <fileset dir="jsr305/src/main/java">
                <exclude name="**/.*"/>
                <include name="**/*.properties"/>
                <include name="**/*.png"/>
                <include name="**/*.fxml"/>
                <include name="**/*.css"/>
            </fileset>
        </copy>
    </target>
    <target name="do-compile.main" depends="init">
        <mkdir dir="${build.main.classes}"/>
        <javac executable="${jdk}/bin/javac" fork="yes"
               source="${jdk.version}" target="${jdk.version}"
               encoding="UTF-8" destdir="${build.main.classes}"
               debug="true"
               verbose="false"
        >
